# MongoDB Connection
# Format pour MongoDB Atlas (cloud):
# MONGO_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/eventhub?retryWrites=true&w=majority
# 
# Format pour MongoDB local:
# MONGO_URI=mongodb://localhost:27017/eventhub
#
# Format pour MongoDB Compass (copier depuis Compass):
# MONGO_URI=mongodb+srv://username:password@cluster0.piqhjvv.mongodb.net/eventhub?retryWrites=true&w=majority
MONGO_URI=your_mongodb_connection_string_here

# Server Port
PORT=5000

# Firebase Admin SDK (pour l'authentification)
# Le chemin vers le fichier JSON de service account Firebase
FIREBASE_SERVICE_ACCOUNT_PATH=

# JWT Secret (pour les tokens)
JWT_SECRET=your_jwt_secret_here

# API Keys
# Pour obtenir une clé Ticketmaster: https://developer.ticketmaster.com/
TICKETMASTER_API_KEY=
# Pour obtenir une clé Unsplash (optionnel, pour les images): https://unsplash.com/developers
UNSPLASH_ACCESS_KEY=
